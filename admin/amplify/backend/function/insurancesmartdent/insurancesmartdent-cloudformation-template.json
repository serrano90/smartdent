{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Lambda Function resource stack creation using Amplify CLI",
  "Parameters": {
    "CloudWatchRule": {
      "Type": "String",
      "Default": "NONE",
      "Description": " Schedule Expression"
    },
    "env": {
      "Type": "String"
    },
    "storageCustomerName": {
      "Type": "String",
      "Default": "storageCustomerName"
    },
    "storageCustomerArn": {
      "Type": "String",
      "Default": "storageCustomerArn"
    },
    "storageCardIntentName": {
      "Type": "String",
      "Default": "storageCardIntentName"
    },
    "storageCardIntentArn": {
      "Type": "String",
      "Default": "storageCardIntentArn"
    },
    "appName": {
      "Type": "String"
    },
    "appUrl": {
      "Type": "String"
    },
    "corsUrl": {
      "Type": "String"
    },
    "flowclApiKey": {
      "Type": "String"
    },
    "flowclSecretKey": {
      "Type": "String"
    },
    "flowclApiUrl": {
      "Type": "String"
    },
    "flowclBaseUrl": {
      "Type": "String"
    },
    "flowclBaseAdminUrl": {
      "Type": "String"
    },
    "flowclBaseUrlThankYouPage": {
      "Type": "String"
    },
    "flowclRegisterByPage": {
      "Type": "Number"
    },
    "mailFrom": {
      "Type": "String"
    },
    "mailSubject": {
      "Type": "String"
    },
    "siiServiceUrl": {
      "Type": "String"
    }
  },
  "Conditions": {
    "ShouldNotCreateEnvResources": {
      "Fn::Equals": [
        {
          "Ref": "env"
        },
        "NONE"
      ]
    }
  },
  "Resources": {
    "LambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Metadata": {
        "aws:asset:path": "./src",
        "aws:asset:property": "Code"
      },
      "Properties": {
        "Handler": "index.handler",
        "FunctionName": {
          "Fn::If": [
            "ShouldNotCreateEnvResources",
            "insurancesmartdent",
            {
              "Fn::Join": [
                "",
                [
                  "insurancesmartdent",
                  "-",
                  {
                    "Ref": "env"
                  }
                ]
              ]
            }
          ]
        },
        "Environment": {
          "Variables": {
            "ENV": {
              "Ref": "env"
            },
            "REGION": {
              "Ref": "AWS::Region"
            },
            "STORAGE_CUSTOMER_NAME": {
              "Ref": "storageCustomerName"
            },
            "STORAGE_CUSTOMER_ARN": {
              "Ref": "storageCustomerArn"
            },
            "STORAGE_CARDINTENT_NAME": {
              "Ref": "storageCardIntentName"
            },
            "STORAGE_CARDINTENT_ARN": {
              "Ref": "storageCardIntentArn"
            },
            "APP_NAME": {
              "Ref": "appName"
            },
            "APP_URL": {
              "Ref": "appUrl"
            },
            "CORS_URL": {
              "Ref": "corsUrl"
            },
            "FLOWCL_API_KEY": {
              "Ref": "flowclApiKey"
            },
            "FLOWCL_SECRET_KEY": {
              "Ref": "flowclSecretKey"
            },
            "FLOWCL_API_URL": {
              "Ref": "flowclApiUrl"
            },
            "FLOWCL_BASE_URL": {
              "Ref": "flowclBaseUrl"
            },
            "FLOWCL_BASE_ADMIN_URL": {
              "Ref": "flowclBaseAdminUrl"
            },
            "FLOWCL_BASE_URL_THANK_YOU_PAGE": {
              "Ref": "flowclBaseUrlThankYouPage"
            },
            "FLOWCL_REGISTER_BY_PAGE": {
              "Ref": "flowclRegisterByPage"
            },
            "MAIL_FROM": {
              "Ref": "mailFrom"
            },
            "MAIL_SUBJECT": {
              "Ref": "mailSubject"
            },
            "SII_SERVICE_URL": {
              "Ref": "siiServiceUrl"
            }
          }
        },
        "Role": {
          "Fn::GetAtt": [
            "LambdaExecutionRole",
            "Arn"
          ]
        },
        "Runtime": "nodejs12.x",
        "Layers": [],
        "Timeout": "25",
        "Code": {
          "S3Bucket": "amplify-insurancesmartdent-prod-172222-deployment",
          "S3Key": "amplify-builds/insurancesmartdent-504f71694a514f703963-build.zip"
        }
      }
    },
    "LambdaExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": {
          "Fn::If": [
            "ShouldNotCreateEnvResources",
            "insurancesmartdentLambdaRole0d90fffa",
            {
              "Fn::Join": [
                "",
                [
                  "insurancesmartdentLambdaRole0d90fffa",
                  "-",
                  {
                    "Ref": "env"
                  }
                ]
              ]
            }
          ]
        },
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        }
      }
    },
    "lambdaexecutionpolicy": {
      "DependsOn": [
        "LambdaExecutionRole"
      ],
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "lambda-execution-policy",
        "Roles": [
          {
            "Ref": "LambdaExecutionRole"
          }
        ],
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents"
              ],
              "Resource": {
                "Fn::Sub": [
                  "arn:aws:logs:${region}:${account}:log-group:/aws/lambda/${lambda}:log-stream:*",
                  {
                    "region": {
                      "Ref": "AWS::Region"
                    },
                    "account": {
                      "Ref": "AWS::AccountId"
                    },
                    "lambda": {
                      "Ref": "LambdaFunction"
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    },
    "AmplifyResourcesPolicy": {
      "DependsOn": [
        "LambdaExecutionRole"
      ],
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "amplify-lambda-execution-policy",
        "Roles": [
          {
            "Ref": "LambdaExecutionRole"
          }
        ],
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "dynamodb:Put*",
                "dynamodb:Create*",
                "dynamodb:BatchWriteItem",
                "dynamodb:Get*",
                "dynamodb:BatchGetItem",
                "dynamodb:List*",
                "dynamodb:Describe*",
                "dynamodb:Scan",
                "dynamodb:Query",
                "dynamodb:Update*",
                "dynamodb:RestoreTable*",
                "dynamodb:Delete*"
              ],
              "Resource": [
                {
                  "Ref": "storageCustomerArn"
                },
                {
                  "Fn::Join": [
                    "/",
                    [
                      {
                        "Ref": "storageCustomerArn"
                      },
                      "index/*"
                    ]
                  ]
                }
              ]
            },
            {
              "Effect": "Allow",
              "Action": [
                "dynamodb:Put*",
                "dynamodb:Create*",
                "dynamodb:BatchWriteItem",
                "dynamodb:Get*",
                "dynamodb:BatchGetItem",
                "dynamodb:List*",
                "dynamodb:Describe*",
                "dynamodb:Scan",
                "dynamodb:Query",
                "dynamodb:Update*",
                "dynamodb:RestoreTable*",
                "dynamodb:Delete*"
              ],
              "Resource": [
                {
                  "Ref": "storageCardIntentArn"
                },
                {
                  "Fn::Join": [
                    "/",
                    [
                      {
                        "Ref": "storageCardIntentArn"
                      },
                      "index/*"
                    ]
                  ]
                }
              ]
            }
          ]
        }
      }
    }
  },
  "Outputs": {
    "Name": {
      "Value": {
        "Ref": "LambdaFunction"
      }
    },
    "Arn": {
      "Value": {
        "Fn::GetAtt": [
          "LambdaFunction",
          "Arn"
        ]
      }
    },
    "Region": {
      "Value": {
        "Ref": "AWS::Region"
      }
    },
    "LambdaExecutionRole": {
      "Value": {
        "Ref": "LambdaExecutionRole"
      }
    }
  }
}